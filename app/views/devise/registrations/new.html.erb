<section class="container mx-auto xl:px-20 lg:px-20 mt-6">
  <div class="flex flex-col justify-center items-center">
    <div class="xl:w-2/6 lg:w-2/5 md:w-2/4 sm:w-full py-1">
      <div class="mt-8 py-8 px-10 bg-white border border-1 border-gray-300">
        <div>
          <div class="w-40 mx-auto">
            <%= image_tag("instagram.png", alt: "") %>
          </div>
          <h4 class="pt-4 text-lg leading-5 mx-auto text-center font-semibold text-gray-400">Sign up to see photos and videos from your friends.</h4>
          <button class="mt-4 py-0.5 rounded w-full px-4 border-0 bg-blue-500 text-sm outline-none flex justify-center items-center mx-auto">
            <i class="fa fa-facebook-square text-xl text-white mr-2"></i>
            <%= link_to "Log in with facebook", user_facebook_omniauth_authorize_path, class: "font-semibold text-sm text-white" %>
          </button>
          <div class="py-4 flex items-center">
            <div class="w-40 border-t border-gray-300"></div>
            <div class="px-4 text-gray-400 font-bold text-xs">OR</div>
            <div class="w-40 border-t border-gray-300"></div>
          </div>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="py-2">
              <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "bg-gray-50 py-2 px-4 w-full border border-1 border-gray-300 outline-none text-xs", required: true %>
            </div>

            <div class="py-2">
              <%= f.text_field :full_name, autofocus: true, placeholder: "Full Name", class: "bg-gray-50 py-2 px-4 w-full border border-1 border-gray-300 outline-none text-xs", required: true %>
            </div>

            <div class="py-2">
              <%= f.text_field :username, autofocus: true, placeholder: "Username", class: "bg-gray-50 py-2 px-4 w-full border border-1 border-gray-300 outline-none text-xs", required: true %>
            </div>

            <div class="pb-4">
              <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password", class: "bg-gray-50 py-2 px-4 w-full border border-1 border-gray-300 outline-none text-xs", required: true, minlength: "6" %>
            </div>

            <div class="actions">
              <%= f.submit "Sign up", class: "py-1.5 px-4 w-full rounded text-center text-sm bg-blue-400 font-bold text-white cursor-pointer" %>
            </div>
          <% end %>
          <p class="mt-3 text-xs text-gray-400 text-center">By signing up, you agree to our Terms, Data Policy and Cookies Policy .</p>
        </div>
      </div>
      <div class="my-2 py-5 px-6 h-16 bg-white border border-1 border-gray-300">
        <p class="text-sm flex justify-center">Don't have an account? 
          <%= link_to "Login", new_session_path(resource_name), class: "ml-2 text-blue-500 font-semibold" %>
        </p>
      </div>
    </div>
    <%= render 'layouts/footer' %>
  </div>
</section>